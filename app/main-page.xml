  <StackLayout orientation="vertical">

    <Image src="~/images/mapps.png" horizontalAlignment="center" width="100" height="100" />

    <TextField id="email" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none" class="textField" />
    <TextField id="pass" hint="Senha" secure="true" class="textField" />

